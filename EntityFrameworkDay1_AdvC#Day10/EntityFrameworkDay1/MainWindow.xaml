<Window x:Class="EntityFrameworkDay1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFrameworkDay1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Activated="BindData" Closed="CloseConnection">
 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
             <Menu  Name="menu1"  VerticalAlignment="Top" Background="BlanchedAlmond">
            <MenuItem Header="Actions">
                    <MenuItem Header="Save changes" IsCheckable="true" Click="SaveChanges" />
                    <MenuItem Header="Reload" IsCheckable="true" Click="ReloadData" />
                </MenuItem>
        </Menu>
            <DataGrid Margin="0 15"   HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"   Name="dataGrid1" VerticalAlignment="Top"  >

            </DataGrid>
        </StackPanel>

        
    </Grid>
</Window>
