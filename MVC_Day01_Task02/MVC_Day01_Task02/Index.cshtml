
    @{
        Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Preview.css"/>
    <title>Task 02</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <form method="post">
                    <div class="backgroundImage">
                        <label>Choose the background image</label>
                        <select name="backgroundImage">
                            @for (int i = 0; i <= 11; i++)
                            {
                                var image = $"{i}.jpg";
                                <option value="/backgrounds/@image">@i</option>
                            }
                        </select><br /><br />

                    </div>
                    <div class="fontColor">
                        <label>choose the font color</label>
                        <select name="fontColor">
                            <option value="red">red</option>
                            <option value="green">green</option>
                            <option value="blue">blue</option>
                            <option value="yellow">yellow</option>
                            <option value="black">black</option>
                        </select> <br />
                        <hr />
                        <br />

                    </div>
                    <div class="greetingType">
                        <label>choose a greeting type</label><br />
                        <input type="radio" id="Birthday" name="greetType" value="Happy birthday;/images/bd.jpg">
                        <label for="Birthday">Birthday</label><br>
                        <input type="radio" id="getWellSoon" name="greetType" value="Get well soon;/images/well.gif">
                        <label for="getWellSoon">get well soon</label><br>
                        <input type="radio" id="valetine" name="greetType" value="Happy Valtine day;/images/val.bmp">
                        <label for="valetine">valetine</label><br />
                        <input type="radio" id="congrats" name="greetType" value="my congrats;/images/congrats.gif">
                        <label for="congrats">congrats</label><br /><br />
                        <input type="radio" id="addPicture" name="addPicture">
                        <label for="addPicture">add the picture</label><br />
                    </div>
                    <div class="messageGreeting">
                        <label>Enter the greeting message here</label><br />
                        <textarea name="messageGreeting" cols="50" rows="10"></textarea>
                    </div>





                    <br /> <input type="submit" value="Preview" />

                </form>
            </div>
                @if (IsPost)
                {

                 <div class="col" style="background-image:url('@Request["backgroundImage"]')">
                     <div class="centerPreview">
                         @{
                             if (!@Request["greetType"].IsEmpty())
                             {
                                 var greeting = @Request["greetType"].Split(';');
                                 <p style="color:@Request["fontColor"]">@greeting[0]</p> <br />
                                 if (!Request["addPicture"].IsEmpty())
                                 {
                                     <img class="imagePreviw" src="@greeting[1]" />
                                 }
                             }
                         }
                         <br />
                         <p style="color:@Request["fontColor"]">@Request["messageGreeting"]</p>
                     </div>
                 </div>
                }



        </div>
    </div>
</body>
</html>
